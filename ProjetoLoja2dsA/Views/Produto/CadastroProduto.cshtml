@model ProjetoLoja2dsA.Models.Produto

@{
    ViewData["Title"] = "Cadastro de Produto";
    Layout = "_Layout";
}
<body>
    <div class="container mt-4">
        <h1>Cadastro de Jogo</h1>
        <p class="text-muted">Preencha os dados para adicionar um novo jogo ao catálogo.</p>

        <form asp-action="CadastroProduto" asp-controller="Produto" method="post" class="mt-3">
            <div class="mb-3">
                <label asp-for="Nome" class="form-label">Nome do jogo</label>
                <input asp-for="Nome" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="Descricao" class="form-label">Descrição</label>
                <textarea asp-for="Descricao" class="form-control" rows="3"></textarea>
            </div>

            <div class="mb-3">
                <label asp-for="Preco" class="form-label">Preço</label>
                <input asp-for="Preco" type="number" step="0.01" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="Categoria" class="form-label">Categoria</label>
                <input asp-for="Categoria" class="form-control" placeholder="Ex: Ação, Aventura, Terror" />
            </div>

            <button type="submit" class="btn btn-primary">Cadastrar jogo</button>
            <a asp-controller="Cliente" asp-action="Jogos" class="btn btn-secondary ms-2">Voltar para jogos</a>
        </form>
    </div>
</body>