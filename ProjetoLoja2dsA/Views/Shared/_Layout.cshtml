@using Microsoft.AspNetCore.Http
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />

@{
    var usuarioId = Context.Session.GetInt32("UsuarioId");
    var usuarioLogado = usuarioId != null;
    var nomeUsuario = Context.Session.GetString("NomeUsuario");
    var avatarUrl = Context.Session.GetString("AvatarUrl")
                    ?? Url.Content("~/img/avatar-default.png");
    var role = Context.Session.GetString("UserRole");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>RocketGames</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjetoLoja2dsA.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/estilo.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Perfil.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-#0C101A border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <!-- LOGO -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">RocketGames</a>

                <!-- BOTÃO MOBILE -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- CONTEÚDO -->
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <!-- ESQUERDA: INÍCIO / JOGOS -->
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Início</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Cliente" asp-action="Jogos">Jogos</a>
                        </li>
                        @if (nomeUsuario == "Funcionario Loja")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Funcionario" asp-action="AreaFuncionario">
                                    Área do Funcionário
                                </a>
                            </li>
                        }
                    </ul>

                    <!-- DIREITA: CARRINHO + LOGIN / PERFIL -->
                    <ul class="navbar-nav ms-auto align-items-center">
                        <!-- LOGIN / PERFIL -->
                        @if (!string.IsNullOrEmpty(nomeUsuario))
                        {
                            <li class="nav-item dropdown ms-3 user-menu">
                                <a class="nav-link d-flex align-items-center user-menu-trigger"
                                   href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">

                                    <img src="@avatarUrl"
                                         alt="Foto do usuário"
                                         class="user-avatar me-2" />

                                    <span class="user-name text-dark">@nomeUsuario</span>
                                </a>

                                <ul class="dropdown-menu dropdown-menu-end user-menu-dropdown">
                                    <li class="user-menu-item">
                                        <a class="user-menu-link"
                                           asp-controller="Usuario" asp-action="Perfil">
                                            Perfil
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li class="user-menu-item">
                                        <form asp-controller="Usuario" asp-action="Logout" method="post">
                                            <button type="submit" class="user-menu-logout">
                                                Sair
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item ms-3">
                                <a class="nav-link" id="Login" asp-controller="Usuario" asp-action="Login">Entrar</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" id="Cadastro" asp-controller="Usuario" asp-action="Cadastro">Criar Conta</a>
                            </li>
                        }

                        <!-- CARRINHO (UM ÚNICO!) -->
                        <li class="nav-item ms-3">
                            <a class="nav-link d-flex align-items-center" asp-controller="Home" asp-action="Carrinho">
                                <span class="cart-wrapper">
                                    <i class="bi bi-cart3 cart-icon" style="font-size: 1.3rem;"></i>

                                    <!-- ÚNICO badge -->
                                    <span id="cart-count-badge" class="cart-badge">
                                        0
                                    </span>
                                </span>
                            </a>
                        </li>
                    </ul>

                    <!-- CSS INLINE ESPECÍFICO DA NAVBAR -->
                    <style>
                        #usuario {
                            margin-top: 8%;
                            font-weight: bold;
                        }

                        .cart-wrapper {
                            position: relative;
                            display: inline-block;
                        }

                        .cart-badge {
                            position: absolute;
                            top: -6px;
                            right: -10px;
                            min-width: 16px;
                            padding: 0 4px;
                            font-size: 0.7rem;
                            line-height: 1.2;
                            text-align: center;
                            border-radius: 999px;
                            background-color: #dc3545;
                            color: #fff;
                            display: none;
                        }

                        #Login {
                            background-color: #A27ED6;
                            border-radius: 10px;
                            width: 80px;
                            text-align: center;
                            color: white;
                            font-weight: bold;
                        }

                        #Cadastro {
                            margin-left: 20px;
                            background-color: #A27ED6;
                            border-radius: 10px;
                            margin-right: 18px;
                            color: white;
                            font-weight: bold;
                        }

                        .cart-icon {
                            color: #A27ED6 !important;
                            font-size: 1.4rem;
                        }
                    </style>
                </div>
            </div>
        </nav>
    </header>

    @if (IsSectionDefined("NoContainer"))
    {
        <main role="main" class="no-container-main">
            @RenderBody()
        </main>
    }
    else
    {
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    }

    <footer class="border-top footer text-muted">
        <div class="container">
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <!-- Variáveis globais para o carrinho -->
    <script>
        window.usuarioLogado = @(usuarioLogado.ToString().ToLower());
        window.usuarioId = @(usuarioId ?? 0);
    </script>

    <!-- JS do carrinho (usado em todas as páginas) -->
    <script src="~/js/carrinho.js"></script>
</body>
</html>
