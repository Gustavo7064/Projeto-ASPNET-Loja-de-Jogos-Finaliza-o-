@model List<ProjetoLoja2dsA.Models.Usuario>

@{
    ViewData["Title"] = "Usuários cadastrados";
}

<div class="container mt-4">
    <h1 class="mb-3">Usuários cadastrados</h1>
    <p class="text-muted mb-4">
        Aqui você visualiza todas as contas criadas no site.
    </p>

    @if (Model == null || !Model.Any())
    {
            <div class="alert alert-info">
                Nenhum usuário cadastrado até o momento.
            </div>
    }
    else
    {
            <table class="table table-dark table-striped table-hover align-middle rounded-3 overflow-hidden">
                <thead>
                    <tr>
                        <th style="width:80px;">ID</th>
                        <th>Nome</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var u in Model)
                {
                            <tr>
                                <td>@u.Id</td>
                                <td>@u.Nome</td>
                                <td>@u.Email</td>
                            </tr>
                }
                </tbody>
            </table>
    }
</div>
